{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "dcl",
  "fileTypes": [
    "dcl"
  ],
  "patterns": [
    {
      "begin": "^\\s*(?=\\{)",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.block.dcl" }
      },
      "end": "^$", 
      "endCaptures": {
        "0": { "name": "punctuation.definition.block.dcl" }
      },
      "patterns": [
        {
          "include": "source.json"
        }
      ]
    },
    {
      "match": "^(\\w+)\\s+(\\w+)\\((.*)\\)",
      "captures": {
        "1": { "name": "keyword.control.dcl" },
        "2": { "name": "entity.name.function.dcl" },
        "3": { "name": "support.variable.dcl" }
      }
    },
    {
      "match": "^(\\w+)\\s+(\\w+)",
      "captures": {
        "1": { "name": "keyword.control.dcl" },
        "2": { "name": "entity.name.function.dcl" }
      }
    },
    {
      "name": "keyword.control.dcl",
      "match": "^(\\w+)"
    }
  ],
  "scopeName": "source.dcl"
}
