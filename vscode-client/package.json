{
	"name": "dpl-language-server",
	"description": "VSCode part of a language server",
	"repository": {
		"url": "https://github.com/nikita-skobov/deploylang"
	},
	"keywords": [
		"dpl",
		"language-server",
		"dpl-language-server",
		"dpl-lsp"
  	],
	"license": "MIT",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.85.0"
	},
	"dependencies": {
		"glob": "^11.0.0",
		"vscode-languageclient": "^9.0.1"
	},
	"activationEvents": [
		"workspaceContains:*.dpl"
  	],
	"contributes": {
		"languages": [
			{
				"id": "dpl",
				"extensions": [".dpl"],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "dpl",
				"scopeName": "source.dpl",
				"path": "dpl.tmLanguage.json"
			}
		]
	},
	"main": "./out/extension",
	"scripts": {
		"compile": "rm -rf ./out && tsc -b",
		"build-rs": "cargo build -p language_server && cp ../target/debug/language_server ./out/",
		"build-rs-release": "cross build --release -p language_server --target x86_64-unknown-linux-musl && cp ../target/x86_64-unknown-linux-musl/release/language_server ./out/",
		"build-rs-release-win": "cross build --release -p language_server --target x86_64-pc-windows-gnu && cp ../target/x86_64-pc-windows-gnu/release/language_server.exe ./out/",
		"build": "npm run compile && npm run build-rs",
		"build-release": "npm run compile && npm run build-rs-release",
		"build-release-win": "npm run compile && npm run build-rs-release-win",
		"package": "npm run build-release && vsce package",
		"package-win": "npm run build-release-win && vsce package"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22.18.6",
		"@types/vscode": "^1.85.0",
		"@vscode/test-electron": "^2.3.9",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	}
}
